@{

}

@model IEnumerable<item>
<a asp-controller="item" asp-action="ADD_Item" class="btn btn-primary">Add New item</a>


<table class="table table-bordered">
    <thead>
        <tr>
            <th>item_id</th>
            <th>item_Name</th>
            <th>item_Description/th>
            <th>item_Cost</th>
           
            <th>item_image</th>
            <th>category</th>
            <th>stars</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.item_id</td>
                <td>@item.item_Name</td>
                <td>@item.item_Description</td>
                <td>@item.item_Cost</td>
                <td>@item.category</td>
                <td>@item.stars</td>

                @*<td>@item.item_image</td>*@
                <td>
                <img src="~/img1/@item.item_image" alt=" dept_img_error" style="border-radius:50%; width:70px;height:70px"/>
                </td>
              
                <td>
                    <a href="/item/Delete/@item.item_id">Delete </a>|
                    <a href="/item/Edit/@item.item_id">Edit </a>

                    
                </td>
            </tr>
        }
    </tbody>

 </table>
